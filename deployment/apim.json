{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string"
        },
        "apimServiceName": {
            "type": "string"
        },
        "apimPublisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "apimPublisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "apimSku": {
            "type": "string",
            "allowedValues": [
                "Developer",
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "apimSkuCount": {
            "type": "int",
            "allowedValues": [
                1,
                2
            ],
            "metadata": {
                "description": "The instance size of this API Management service."
            }
        },
        "validationKey": {
            "type": "string",
            "metadata": {
                "description": "Delegation requests from APIM to Delegation app (Set for production)"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service",
            "apiVersion": "2021-08-01",
            "name": "[parameters('apimServiceName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('apimSku')]",
                "capacity": "[parameters('apimSkuCount')]"
            },
            "properties": {
                "publisherEmail": "[parameters('apimPublisherEmail')]",
                "publisherName": "[parameters('apimPublisherName')]"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "resources": [
                {
                    "type": "portalsettings",
                    "name": "delegation",
                    "apiVersion": "2021-08-01",
                    "properties": {
                        "subscriptions": {
                            "enabled": true
                        },
                        "url": "[uri(concat('https://',reference(resourceId('Microsoft.Web/sites',parameters('appName')),'2020-12-01').defaultHostName),'apim-delegation')]",
                        "userRegistration": {
                            "enabled": true
                        },
                        "validationKey": "[base64(parameters('validationKey'))]"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ]
                },
                {
                    "type": "policies",
                    "apiVersion": "2021-08-01",
                    "name": "policy",
                    "properties": {
                        "format": "xml-link",
                        "value": "https://raw.githubusercontent.com/duartefrazao/api/main/api-management/policies/global.xml?token=GHSAT0AAAAAABQC22BU2WTOLKNSOBIJYGSCYSG456Q"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ]

                },
                {
                    "type": "products",
                    "apiVersion": "2021-08-01",
                    "name": "payg",
                    "properties": {
                        "approvalRequired": false,
                        "description": "Pay as you go subscription",
                        "displayName": "Pay as you go",
                        "state": "published",
                        "subscriptionRequired": true,
                        "terms": "Terms of usage TODO"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "resources": [
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "guests",
                            "dependsOn": [
                                "payg"
                            ]

                        },
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "developers",
                            "dependsOn": [
                                "payg"
                            ]

                        }
                    ]

                },
                {
                    "type": "products",
                    "apiVersion": "2021-08-01",
                    "name": "free",
                    "properties": {
                        "approvalRequired": false,
                        "description": "Free subscription",
                        "displayName": "Free",
                        "state": "notPublished",
                        "subscriptionRequired": true,
                        "terms": "Terms of usage TODO",
                        "subscriptionsLimit": 1
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "resources": [
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "guests",
                            "dependsOn": [
                                "free"
                            ]

                        },
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "developers",
                            "dependsOn": [
                                "free"
                            ]

                        }
                    ]

                },
                {
                    "type": "products",
                    "apiVersion": "2021-08-01",
                    "name": "basic",
                    "properties": {
                        "approvalRequired": false,
                        "description": "A standard subscription with a set monthly quota of X calls",
                        "displayName": "Basic",
                        "state": "published",
                        "subscriptionRequired": true,
                        "terms": "Terms of usage TODO"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "resources": [
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "guests",
                            "dependsOn": [
                                "basic"
                            ]

                        },
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "developers",
                            "dependsOn": [
                                "basic"
                            ]

                        }
                    ]

                },
                {
                    "type": "namedValues",
                    "apiVersion": "2021-08-01",
                    "name": "delegationAppServiceName",
                    "properties": {
                        "displayName": "delegationAppServiceName",
                        "secret": false,
                        "value": "[parameters('appName')]"
                    },
                    "dependsOn": ["[parameters('apimServiceName')]"]
                }
            ]
        }
    ],
    "outputs": {}
}