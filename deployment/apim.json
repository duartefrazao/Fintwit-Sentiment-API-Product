{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string"
        },
        "apimServiceName": {
            "type": "string"
        },
        "apimPublisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "apimPublisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "apimSku": {
            "type": "string",
            "allowedValues": [
                "Developer",
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "apimSkuCount": {
            "type": "int",
            "allowedValues": [
                1,
                2
            ],
            "metadata": {
                "description": "The instance size of this API Management service."
            }
        },
        "validationKey": {
            "type": "string",
            "metadata": {
                "description": "Delegation requests from APIM to Delegation app (Set for production)"
            }
        },
        "policyName": {
            "type": "string",
            "metadata": {
                "description": "Global policy assignment, traffic to api only from trusted sources"
            }
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service",
            "apiVersion": "2021-08-01",
            "name": "[parameters('apimServiceName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('apimSku')]",
                "capacity": "[parameters('apimSkuCount')]"
            },
            "properties": {
                "publisherEmail": "[parameters('apimPublisherEmail')]",
                "publisherName": "[parameters('apimPublisherName')]"
            },
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/portalsettings",
            "name": "[concat(parameters('apimServiceName'),'/delegation')]",
            "apiVersion": "2021-08-01",
            "properties": {
                "subscriptions": {
                    "enabled": true
                },
                "url": "[uri(concat('https://',reference(resourceId('Microsoft.Web/sites',parameters('appName')),'2020-12-01').defaultHostName),'apim-delegation')]",
                "userRegistration": {
                    "enabled": true
                },
                "validationKey": "[base64(parameters('validationKey'))]"
            },
            "dependsOn": [ "[resourceId('Microsoft.ApiManagement/service', parameters('apimServiceName'))]" ]
        },
        {
            "type": "Microsoft.ApiManagement/service/policies",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('apimServiceName'),'/',parameters('policyName'))]",
            "properties": {
                "format": "xml-link",
                "value": "https://raw.githubusercontent.com/duartefrazao/api/main/api-management/policies/global.xml?token=GHSAT0AAAAAABQC22BU2WTOLKNSOBIJYGSCYSG456Q"
            },
            "dependsOn": [ "[resourceId('Microsoft.ApiManagement/service', parameters('apimServiceName'))]" ]
        },
        {
            "type": "Microsoft.ApiManagement/service/products/groups",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('apimServiceName'),'/guest')]",
            "dependsOn": [ "[resourceId('Microsoft.ApiManagement/service', parameters('apimServiceName'))]" ]
        },
        {
            "type": "Microsoft.ApiManagement/service/products/groups",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('apimServiceName'),'/developer')]",
            "dependsOn": [ "[resourceId('Microsoft.ApiManagement/service', parameters('apimServiceName'))]" ]
        },
        {
            "type": "Microsoft.ApiManagement/service/products",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('apimServiceName'),'/payg')]",
            "properties": {
                "approvalRequired": false,
                "description": "Pay as you go subscription",
                "displayName": "Pay as you go",
                "state": "published",
                "subscriptionRequired": true,
                "terms": "Terms of usage TODO"
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/products",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('apimServiceName'),'/free')]",
            "properties": {
                "approvalRequired": false,
                "description": "Free subscription",
                "displayName": "Free",
                "state": "notPublished",
                "subscriptionRequired": true,
                "terms": "Terms of usage TODO",
                "subscriptionsLimit": 1
            }
        },
        {
            "type": "Microsoft.ApiManagement/service/products",
            "apiVersion": "2021-08-01",
            "name": "[concat(parameters('apimServiceName'),'/basic')]",
            "properties": {
                "approvalRequired": false,
                "description": "A standard subscription with a set monthly quota of X calls",
                "displayName": "Basic subscription",
                "state": "published",
                "subscriptionRequired": true,
                "terms": "Terms of usage TODO"
            }
        }

    ],
    "outputs": {}
}