{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "string"
        },
        "apimServiceName": {
            "type": "string"
        },
        "apimPublisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "apimPublisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "apimSku": {
            "type": "string",
            "allowedValues": [
                "Developer",
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "apimSkuCount": {
            "type": "int",
            "allowedValues": [
                1,
                2
            ],
            "metadata": {
                "description": "The instance size of this API Management service."
            }
        },
        "validationKey": {
            "type": "string",
            "metadata": {
                "description": "Delegation requests from APIM to Delegation app (Set for production)"
            }
        },
        "apiName": {
            "type": "string",
            "metadata": {
                "description": "Api name"
            }
        },
        "apiUrl": {
            "type": "string",
            "metadata": {
                "description": "Api url"
            }
        },
        "freePolicyUrl": {
            "type": "string"
        },
        "monthlyPolicyUrl": {
            "type": "string"
        },
        "yearlyPolicyUrl": {
            "type": "string"
        },
        "paygPolicyUrl": {
            "type": "string"
        },
        "globalPolicyUrl": {
            "type": "string"
        },
        "apiLink": {
            "type": "string"        
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.ApiManagement/service",
            "apiVersion": "2021-08-01",
            "name": "[parameters('apimServiceName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('apimSku')]",
                "capacity": "[parameters('apimSkuCount')]"
            },
            "properties": {
                "publisherEmail": "[parameters('apimPublisherEmail')]",
                "publisherName": "[parameters('apimPublisherName')]"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "resources": [
                {
                    "type": "portalsettings",
                    "name": "delegation",
                    "apiVersion": "2021-08-01",
                    "properties": {
                        "subscriptions": {
                            "enabled": true
                        },
                        "url": "[uri(concat('https://',reference(resourceId('Microsoft.Web/sites',parameters('appName')),'2020-12-01').defaultHostName),'apim-delegation')]",
                        "userRegistration": {
                            "enabled": true
                        },
                        "validationKey": "[base64(parameters('validationKey'))]"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ]
                },
                {
                    "type": "policies",
                    "apiVersion": "2021-08-01",
                    "name": "policy",
                    "properties": {
                        "format": "xml-link",
                        "value": "[parameters('globalPolicyUrl')]"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ]

                },
                {
                    "type": "products",
                    "apiVersion": "2021-08-01",
                    "name": "payg",
                    "properties": {
                        "approvalRequired": false,
                        "description": "Pay as you go subscription, billed monthly.\n10cent/100calls.",
                        "displayName": "Pay as you go",
                        "state": "published",
                        "subscriptionRequired": true,
                        "terms": "Terms of usage TODO"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "resources": [
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "guests",
                            "dependsOn": [
                                "payg"
                            ]

                        },
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "developers",
                            "dependsOn": [
                                "payg"
                            ]

                        },
                        {
                            "type": "policies",
                            "apiVersion": "2021-08-01",
                            "name": "policy",
                            "dependsOn": [
                                "payg"
                            ],
                            "properties": {
                                "format": "xml-link",
                                "value": "[parameters('paygPolicyUrl')]"
                            }
                        }
                    ]

                },
                {
                    "type": "products",
                    "apiVersion": "2021-08-01",
                    "name": "free",
                    "properties": {
                        "approvalRequired": false,
                        "description": "Free subscription allowing 100 calls per month.",
                        "displayName": "Free",
                        "state": "notPublished",
                        "subscriptionRequired": true,
                        "terms": "Terms of usage TODO",
                        "subscriptionsLimit": 1
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "resources": [
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "guests",
                            "dependsOn": [
                                "free"
                            ]

                        },
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "developers",
                            "dependsOn": [
                                "free"
                            ]

                        },
                        {
                            "type": "policies",
                            "apiVersion": "2021-08-01",
                            "name": "policy",
                            "dependsOn": [
                                "free"
                            ],
                            "properties": {
                                "format": "xml-link",
                                "value": "[parameters('freePolicyUrl')]"
                            }
                        }
                    ]

                },
                {
                    "type": "products",
                    "apiVersion": "2021-08-01",
                    "name": "monthly",
                    "properties": {
                        "approvalRequired": false,
                        "description": "Monthly subscription of 40€/month allowing up to 100,000 calls per month.\n4 cents per 100 calls.",
                        "displayName": "Basic Monthly",
                        "state": "published",
                        "subscriptionRequired": true,
                        "terms": "Terms of usage TODO"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "resources": [
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "guests",
                            "dependsOn": [
                                "monthly"
                            ]

                        },
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "developers",
                            "dependsOn": [
                                "monthly"
                            ]

                        },
                        {
                            "type": "policies",
                            "apiVersion": "2021-08-01",
                            "name": "policy",
                            "dependsOn": [
                                "monthly"
                            ],
                            "properties": {
                                "format": "xml-link",
                                "value": "[parameters('monthlyPolicyUrl')]"
                            }
                        }
                    ]

                },
                {
                    "type": "products",
                    "apiVersion": "2021-08-01",
                    "name": "yearly",
                    "properties": {
                        "approvalRequired": false,
                        "description": "Yearly subscription of 30€/month allowing up to 100,000 calls per month.\n3 cents per 100 calls.",
                        "displayName": "Basic Yearly",
                        "state": "published",
                        "subscriptionRequired": true,
                        "terms": "Terms of usage TODO"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "resources": [
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "guests",
                            "dependsOn": [
                                "yearly"
                            ]

                        },
                        {
                            "type": "groups",
                            "apiVersion": "2021-08-01",
                            "name": "developers",
                            "dependsOn": [
                                "yearly"
                            ]

                        },
                        {
                            "type": "policies",
                            "apiVersion": "2021-08-01",
                            "name": "policy",
                            "dependsOn": [
                                "yearly"
                            ],
                            "properties": {
                                "format": "xml-link",
                                "value": "[parameters('yearlyPolicyUrl')]"
                            }
                        }
                    ]

                },
                {
                    "type": "namedValues",
                    "apiVersion": "2021-08-01",
                    "name": "delegationAppServiceName",
                    "properties": {
                        "displayName": "delegationAppServiceName",
                        "secret": false,
                        "value": "[parameters('appName')]"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ]
                },
                {
                    "type": "namedValues",
                    "apiVersion": "2021-08-01",
                    "name": "apimServiceName",
                    "properties": {
                        "displayName": "apimServiceName",
                        "secret": false,
                        "value": "[parameters('apimServiceName')]"
                    },
                    "dependsOn": [ "[parameters('apimServiceName')]" ]
                },
                {
                    "type": "apis",
                    "apiVersion": "2021-08-01",
                    "name": "[parameters('apiName')]",
                    "dependsOn": [ "[parameters('apimServiceName')]" ],
                    "properties": {
                        "displayName": "[parameters('apiName')]",
                        "apiRevision": "1",
                        "subscriptionRequired": true,
                        "serviceUrl": "[parameters('apiUrl')]",
                        "path": "[parameters('apiName')]",
                        "protocols": [
                            "https"
                        ],
                        "isCurrent": true,
                        "value": "[parameters('apiLink')]",
                        "format": "openapi-link"
                        
                    }
                }

            ]
        }
    ],
    "outputs": {}
}