{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appPlanSku": {
            "type": "string",
            "defaultValue": "F1"
        },
        "planName": {
            "type": "string",
            "defaultValue": "app-plan-api-test1"
        },
        "appName": {
            "type": "string",
            "defaultValue": "app-api-test1"
        },
        "apimServiceName": {
            "type": "string",
            "defaultValue": "apim-api-test1"
        },
        "apimPublisherEmail": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The email address of the owner of the service"
            },
            "defaultValue":"duartemarquesmano@gmail.com"
        },
        "apimPublisherName": {
            "type": "string",
            "minLength": 1,
            "metadata": {
                "description": "The name of the owner of the service"
            },
            "defaultValue": "Api Publisher"
        },
        "apimSku": {
            "type": "string",
            "defaultValue": "Developer",
            "allowedValues": [
                "Developer",
                "Standard",
                "Premium"
            ],
            "metadata": {
                "description": "The pricing tier of this API Management service"
            }
        },
        "apimSkuCount": {
            "type": "int",
            "defaultValue": 1,
            "allowedValues": [
                1,
                2
            ],
            "metadata": {
                "description": "The instance size of this API Management service."
            }
        },
        "validationKey": {
            "type": "string",
            "metadata": {
                "description": "Delegation requests from APIM to Delegation app (Set for production)"
            },
            "defaultValue": "[newGuid()]"
        },
        "policyName": {
            "type": "string",
            "metadata": {
                "description": "Global policy assignment, traffic to api only from trusted sources"
            },
            "defaultValue": "global"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "name": "appservice",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/duartefrazao/api/main/deployment/appservice.json?token=GHSAT0AAAAAABQC22BVD3AVMRQH52LNVKHIYSF363A"
                },
                "parameters": {
                    "appPlanSku":{"value": "[parameters('appPlanSku')]"},
                    "planName":{"value": "[parameters('planName')]"},
                    "appName":{"value": "[parameters('appName')]"}
                }
            }
        },
        {
            "name": "apim",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    //"uri": "https://raw.githubusercontent.com/duartefrazao/api/main/deployment/apim.json?token=GHSAT0AAAAAABQC22BUQYO246B52GPV7JJMYSGBREA"
                    "uri": "https://apideployments.blob.core.windows.net/templates/apim.json"
                },
                "parameters": {
                    "appName":{"value": "[parameters('appName')]"},
                    "apimServiceName":{"value": "[parameters('apimServiceName')]"},
                    "apimPublisherEmail":{"value": "[parameters('apimPublisherEmail')]"},
                    "apimPublisherName":{"value": "[parameters('apimPublisherName')]"},
                    "apimSku":{"value": "[parameters('apimSku')]"},
                    "apimSkuCount":{"value": "[parameters('apimSkuCount')]"},
                    "validationKey":{"value": "[parameters('validationKey')]"},
                    "policyName":{"value": "[parameters('policyName')]"}
                }
            }
        }
    ],
    "outputs": {}
}